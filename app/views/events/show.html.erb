<div id="alert alert-info"><p><%= notice %></p></div>
<form class="form-horizontal">
	<div class="form-group">
		<label class="col-sm-2 control-label">Title:</label>
		<div class="col-sm-10">
			<p class="form-control-static"><%= @event.title %> </p>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Description:</label>
		<div class="col-sm-10">
			<p class="form-control-static"> <%= @event.description %> </p>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Start:</label>
		<div class="col-sm-10">
			<p class="form-control-static"><%= @event.start %> </p>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">End:</label>
		<div class="col-sm-10">
			<p class="form-control-static"><%= @event.end %> </p>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Image:</label>
		<div class="col-sm-10">
			<p class="form-control-static"> <%= link_to image_tag(@event.image.url(:med)), @event.image.url %> </p>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">User:</label>
		<div class="col-sm-10">
			<p class="form-control-static"><%= @event.user.name %> </p>
		</div>
	</div>
</form>
<%= link_to 'Edit', edit_event_path, {:class=>'btn btn-danger '} %>
<%= link_to 'Back', events_path, {:class=>'btn btn-default '} %>
