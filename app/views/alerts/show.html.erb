<div id="alert alert-info"><p><%= notice %></p></div>
<form class="form-horizontal">
	<div class="form-group">
		<label class="col-sm-2 control-label">Title:</label>
		<div class="col-sm-10">
			<p class="form-control-static"><%= @alert.title %> </p>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Description:</label>
		<div class="col-sm-10">
			<p class="form-control-static"> <%= @alert.description %> </p>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Type:</label>
		<div class="col-sm-10">
			<p class="form-control-static"><%= @alert.atype %> </p>
		</div>
	</div>

	<div class="form-group">
		<label class="col-sm-2 control-label">Start:</label>
		<div class="col-sm-10">
			<p class="form-control-static"><%= @alert.start %> </p>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">End:</label>
		<div class="col-sm-10">
			<p class="form-control-static"><%= @alert.end %> </p>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">User:</label>
		<div class="col-sm-10">
			<p class="form-control-static"><%= @alert.user.name %> </p>
		</div>
	</div>
</form>
<%= link_to 'Edit', edit_alert_path, {:class=>'btn btn-danger '} %>
<%= link_to 'Back', alerts_path, {:class=>'btn btn-default '} %>
